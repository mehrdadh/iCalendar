{
    "manifest_version": 3,
    "name": "iCalendar",
    "version": "1.0.0",
    "description": "Import iCalendar (.ics) files to Google Calendar with simple drag and drop.",
    "icons": {
        "16": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "iCalendar"
    },
    "permissions": [
        "identity",
        "storage"
    ],
    "host_permissions": [
        "https://www.googleapis.com/*",
        "https://accounts.google.com/*"
    ],
    "oauth2": {
        "client_id": "464187272652-jopvbqtpda8bmoaajn1qj9lg8erstd2j.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/calendar.events",
            "https://www.googleapis.com/auth/calendar.readonly"
        ]
    },
    "background": {
        "service_worker": "background.js"
    }
}
