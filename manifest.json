{
  "manifest_version": 3,
  "name": "iCalendar",
  "version": "1.0.1",
  "description": "Import calendar files (.ics, .vcs, etc) to Google Calendar with simple drag and drop.",
  "homepage_url": "https://mehrdadh.com/iCalendar",
  "icons": {
    "16": "images/logo_16x16.png",
    "48": "images/logo_48x48.png",
    "128": "images/logo_128x128.png",
    "512": "images/logo_512x512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "iCalendar"
  },
  "permissions": ["identity", "storage"],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://accounts.google.com/*"
  ],
  "oauth2": {
    "client_id": "464187272652-0cjnf3o7e61ufk4lf6fvhulrra1hs3vs.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.events",
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "background": {
    "service_worker": "background.js"
  }
}
